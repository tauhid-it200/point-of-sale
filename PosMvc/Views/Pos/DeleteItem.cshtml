@model PosMvc.Models.Item
@{
    ViewBag.Title = "DeleteItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <br/>
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <h4>Are you sure to delete @Model.Name from the item list?</h4>
            </div>
            <div class="panel-body">
                <div class="col-lg-offset-4 col-lg-2">
                    @Html.ActionLink("Yes", "ConfirmDelete", "Pos", new { id = @Model.Id, choice = 1 }, new { @class = "btn btn-danger btn-block" })
                </div>
                <div class="col-lg-2">
                    @Html.ActionLink("No", "ConfirmDelete", "Pos", new { id = @Model.Id, choice = 0 }, new { @class = "btn btn-primary btn-block" })
                </div>
            </div>
        </div>
    </div>
</div>

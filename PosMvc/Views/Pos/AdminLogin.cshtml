@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-offset-4 col-lg-4">
        <br />
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <h3>Admin Login</h3>
            </div>
            <div class="panel-body">
                <div class="col-lg-offset-1 col-lg-10">
                    @if (Session["message"] != null)
                    {
                        <p class="text-warning">@Session["message"]</p>
                        Session["message"] = null;
                    }
                    @using (Html.BeginForm("AdminLoginAttempt", "Pos"))
                    {
                        <div class="form-group">
                            <label for="username">Username</label>
                            @Html.TextBox("username", "", new { @class = "form-control", @placeholder = "admin" })
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            @Html.Password("password", "", new { @class = "form-control", @placeholder = "12341234" })
                        </div>
                        <button type="submit" class="btn btn-success btn-block">Login</button>
                    }
                </div>

            </div>
        </div>
    </div>
</div>


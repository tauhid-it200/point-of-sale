@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-offset-3 col-lg-6">
        <br />
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <h3>Dashboard</h3>
            </div>
            <div class="panel-body">
                <br />
                <div class="col-lg-offset-2 col-lg-8">
                    @if (Session["message"] != null)
                    {
                        <p class="text-info">@Session["message"]</p>
                        Session["message"] = null;
                    }
                    <div class="col-lg-6">
                        @Html.ActionLink("Add Item", "AddItem", "Pos", null, new { @class = "btn btn-info btn-block" })
                    </div>
                    <div class="col-lg-6">
                        @Html.ActionLink("View Items", "ItemList", "Pos", null, new { @class = "btn btn-primary btn-block" })
                    </div>
                    <div class="col-lg-offset-3 col-lg-6">
                        <br />
                        @Html.ActionLink("View Orders", "ShowOrders", "Pos", null, new { @class = "btn btn-default btn-block" })
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

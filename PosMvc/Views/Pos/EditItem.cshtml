@model PosMvc.Models.Item
@{
    ViewBag.Title = "EditItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-offset-4 col-lg-4">
        <br />
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <h3>Edit Item</h3>
            </div>
            <div class="panel-body">
                <div class="col-lg-offset-1 col-lg-10">
                    @if (Session["message"] != null)
                    {
                        <p class="text-info">@Session["message"]</p>
                        Session["message"] = null;
                    }
                    @using (Html.BeginForm("UpdateItem", "Pos"))
                    {
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, "Name")
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Price, "Price")
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Stock, "Stock")
                            @Html.TextBoxFor(m => m.Stock, new { @class = "form-control" })
                        </div>
                        @Html.HiddenFor(m => m.Id)
                        <button type="submit" class="btn btn-info btn-block">Update</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



